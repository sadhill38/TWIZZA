<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- product.template -->
        <record id="al_product_template_form_view_inherit_cost" model="ir.ui.view">
            <field name="name">al.product.template.form.view.inherit.cost</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='standard_price']" position="attributes">
                    <attribute name="groups">al_product_twizza.group_product_cost_management</attribute>
                </xpath>
                <xpath expr="//div[@name='standard_price_uom']" position="attributes">
                    <attribute name="groups">al_product_twizza.group_product_cost_management</attribute>
                </xpath>
            </field>
        </record>


        <!-- Form View : product.product -->
        <record id="al_product_product_form_view_inherit_volume" model="ir.ui.view">
            <field name="name">al.product.product.form_view.inherit.volume</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">

                <div name="volume" position="after">
                    <label for="unit_volume" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}"/>
                    <div class="o_row" name="unit_volume" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}">
                        <field name="unit_volume" string="Unit Volume"/>
                        <span>L</span>
                    </div>
                </div>

            </field>
        </record>

    </data>
</odoo>
