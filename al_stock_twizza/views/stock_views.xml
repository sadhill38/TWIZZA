<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- View : stock.picking inherit to add samples -->
    <record id="view_picking_form_inherit_samples" model="ir.ui.view">
        <field name="name">view.picking.form.inherit.samples</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!--     stock.move       -->
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='location_dest_id']" position="replace"/>
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='description_picking']" position="after">
                <field name="is_sample"/>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']/form/group/field[@name='product_id']" position="after">
                <field name="is_sample"/>
            </xpath>
        </field>
    </record>

    <!--  stock.move  -->
    <record id="view_move_search_inherit_samples" model="ir.ui.view">
        <field name="name">view.move.search.inherit.samples</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='incoming']" position="before">
                <filter string="Samples" name="samples" domain="[('is_sample','=',True)]"/>
                <separator/>
            </xpath>
        </field>
    </record>

    <!--  stock.move.line  -->
    <record id="view_stock_move_line_detailed_operation_tree_inherit_samples" model="ir.ui.view">
        <field name="name">view.stock.move.line.detailed.operation.tree.inherit.samples</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_locked']" position="after">
                <field name="is_sample"/>
            </xpath>
        </field>
    </record>
    <!--  stock.move.line  -->
    <record id="stock_move_line_view_search_inherit_samples" model="ir.ui.view">
        <field name="name">stock.move.line.view.search.inherit.samples</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.stock_move_line_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='incoming']" position="before">
                <filter string="Samples" name="samples" domain="[('is_sample','=',True)]"/>
                <separator/>
            </xpath>
        </field>
    </record>


    <!-- stock.warehouse -->
    <record id="view_warehouse_inherit_samples" model="ir.ui.view">
        <field name="name">view.warehouse.inherit.samples</field>
        <field name="model">stock.warehouse</field>
        <field name="inherit_id" ref="stock.view_warehouse"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_stock_id']" position="after">
                <field name="sample_loc_id" readonly="1" required="0"/>
            </xpath>
        </field>
    </record>

    <!--  stock.valuation.layer  -->
    <record id="view_inventory_valuation_search_inherit_samples" model="ir.ui.view">
        <field name="name">view.inventory.valuation.search.inherit.samples</field>
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="stock_account.view_inventory_valuation_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='inactive']" position="before">
                <filter string="Samples" name="samples" domain="[('is_sample','=',True)]"/>
            </xpath>
        </field>
    </record>

</odoo>
