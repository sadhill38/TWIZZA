        <field name="domain">[('type', '=', 'out_refund')]</field>
        <field name="context">{'default_type': 'out_refund', 'create': 0}</field>
    </record>
    <menuitem name="Credit Notes"
              id="menu_sales_credit_note_action"
              parent="sale.sale_order_menu"
              action="action_move_out_refund_type_twizza"
              groups="al_account_twizza.group_account_invoice_adv"
              sequence="8"/>


    <!--  purchase  -->
