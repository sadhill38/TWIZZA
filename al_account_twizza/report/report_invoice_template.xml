<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document" inherit_id="account.report_invoice_document">

        <xpath expr="//p[@name='comment']" position="after">
            <center>
                <t t-if="o.payment_mode_id.bank_acocunt">
                    <span t-field="o.payment_mode_id.bank_acocunt"/>
                </t>
                <t t-else="">
                    <!-- todo : default value goes here -->
                    <!-- todo : remove studio added fields -->
                </t>
            </center>
        </xpath>

        <xpath expr="//th[@name='th_price_unit']" position="after">
            <th name="th_tarif_unit" class="text-right">Net Price Unit (unit)</th>
            <th name="th_tarif_uom" class="text-right">Net Price Unit (uom)</th>
        </xpath>

        <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}" position="after">
            <td name="td_tarif_unit" class="text-right">
                <span t-field="line.tarif_unit"/>
            </td>
            <td name="td_tarif_uom" class="text-right">
                <span t-field="line.tarif_uom"/>
            </td>
        </td>

    </template>
</odoo>