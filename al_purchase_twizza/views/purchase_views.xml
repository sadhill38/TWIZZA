<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Form View to Modify it -->
    <record id="purchase_order_form_inherit_twizza" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.twizza</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <header position="attributes">
                <attribute name="groups" eval="sales_team">purchase.group_purchase_user</attribute>
            </header>

        </field>
    </record>

</odoo>